<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
   
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Login Page</title>
    <style>
        /* Ensure the footer is at the bottom of the page */
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background-color: #e7f3fa; /* Light tinted blue background */
        }

        .content {
            flex: 1;
        }

        /* Style the form border */
        .form-container {
            border: 1px solid #0d6efd; /* Hospital blue border color */
            border-radius: 10px;
            padding: 20px; /* Add some padding inside the border */
            background-color: white; /* Optional: white background for form */
            animation: fadeIn 1.5s ease-in-out;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            margin-top: 4em; /* Set distance from the top */
        }

        footer {
            background-color: #0d6efd; /* Hospital blue footer background */
        }

        .text-blue {
            color: #0d6efd; /* Hospital blue text color */
        }

        .btn-blue {
            background-color: #0d6efd;
            border-color: #0d6efd;
            animation: buttonGlow 1.5s infinite alternate;
        }

        .btn-blue:hover {
            background-color: #0b5ed7;
            border-color: #0a58ca;
        }

        .navbar {
            background-color: #0d6efd; /* Hospital blue for the header */
            animation: slideDown 1s ease-in-out;
        }

        .navbar-brand {
            color: white !important;
            font-weight: bold;
            font-size: 1.5rem;
        }

        .navbar-nav .nav-link {
            color: white !important;
            padding: 0.5rem 1rem;
            font-size: 1rem;
            border: 2px solid transparent;
            border-radius: 5px;
            transition: all 0.3s ease-in-out;
        }

        .navbar-nav .nav-link:hover {
            color: white !important;
            background-color: #0a58ca;
            border-color: #0a58ca;
        }

        .navbar-nav .nav-link.signup {
            color: white !important;
            font-weight: bold;
            background-color: #77a6ed;
            border-color: #77a6ed;
            transition: all 0.3s ease-in-out;
        }

        .navbar-nav .nav-link.signup:hover {
            background-color: #9dbff3;
            border-color: #9dbff3;
        }

        /* Keyframes for animations */
        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }

        @keyframes slideDown {
            from {
                transform: translateY(-100%);
            }
            to {
                transform: translateY(0);
            }
        }

        @keyframes buttonGlow {
            from {
                box-shadow: 0 0 10px rgba(13, 110, 253, 0.5);
            }
            to {
                box-shadow: 0 0 20px rgba(13, 110, 253, 0.7);
            }
        }

        @media (max-width: 768px) {
            .form-container {
                width: 90%; /* Reduce size for mobile view */
                margin: 0 auto; /* Center the form horizontally */
                margin-top: 4em; /* Ensure the top margin is consistent */
            }

            .content {
                display: block;
            }
        }
    </style>
</head>
<body>
    
    <!-- Header Bar -->
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">B-CLINIC</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link signup" href="/signup">Sign Up</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="content">
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-4 form-container border border-primary shadow">
                    <h2 class="text-center text-blue">Login</h2>
                    <form action="/login" method="post">
                        <div class="mb-3">
                            <label for="email" class="form-label text-blue">Email:</label>
                            <input type="email" id="email" name="email" class="form-control border border-primary" required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label text-blue">Password:</label>
                            <input type="password" id="password" name="password" class="form-control border border-primary" required>
                        </div>
                        <button type="submit" class="btn btn-blue w-100">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="text-center text-lg-start mt-auto">
        <div class="container p-4">
            <p class="text-center text-white">&copy; 2024 B-CLINIC. All Rights Reserved.</p>
            <p class="text-center">
                <a href="#" class="text-decoration-none text-white">Privacy Policy</a> | 
                <a href="#" class="text-decoration-none text-white">Terms of Service</a>
            </p>
        </div>
    </footer>

    <script>
        function prventBack() { window.history.forward(); }
        setTimeout("prventBack()", 0);
        window.onunload = function () { null };
    </script>
</body>
</html>
